#include <stdio.h>
#include <string>
#include <iostream>

using namespace std;
int main(){
	
	char palavra[40];
	int a=0, e=0, i=0, o=0, u=0;
	int x;
	
	cout<<"Digite a Palavra: ";
	cin>> palavra;
	
	for (x=0;palavra[x] != '\0';x++){
		if (palavra[x]=='a'){
			a++;
		}
		if (palavra[x]=='e'){
			e++;
		}
		if (palavra[x]=='i'){
			i++;
		}
		if (palavra[x]=='o'){
			o++;
		}
		if (palavra[x]=='u'){
			u++;
		}
	}
	cout<<" Quantidade de A: "<< a <<endl;
	cout<<endl;
	cout<<" Quantidade de E: "<< e <<endl;
	cout<<endl;
	cout<<" Quantidade de I: "<< i <<endl;
	cout<<endl;
	cout<<" Quantidade de O: "<< o <<endl;
	cout<<endl;
	cout<<" Quantidade de U: "<< u <<endl;
	cout<<endl;
}
